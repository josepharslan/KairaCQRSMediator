@model CreateSubscriberCommand

<section id="subscribeSection" class="newsletter bg-light" style="background: url(~/kaira-1.0.0/images/pattern-bg.png) no-repeat;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 py-5 my-5">
                <div class="subscribe-header text-center pb-3">
                    <h3 class="section-title text-uppercase">Yeni haberler almak için abone olun.</h3>
                </div>
                <form id="form" class="d-flex flex-wrap gap-2" method="post" asp-controller="HomePage" asp-action="Subscribe">
                    <input type="text" asp-for="Mail" placeholder="Mail adresiniz" class="form-control form-control-lg">
                    <span asp-validation-for="Mail" class="text-danger"></span>
                    <button class="btn btn-dark btn-lg text-uppercase w-100">Abone Ol</button>
                </form>
            </div>
        </div>
    </div>
</section>
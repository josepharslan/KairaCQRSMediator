@model List<GetServiceQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}
@{
    int count = 0;
}
<div class="card">
    <div class="card-body">
        <div class="card-title">
            <div class="row">
                <div class="col">
                    <h4>Hizmetler</h4>
                </div>
                <div class="col text-end">
                    <a href="/Admin/Service/CreateService" class="btn btn-primary ">Yeni Hizmet</a>
                </div>
            </div>
        </div>

        <table class="table table-bordered">

            <tr>
                <th>#</th>
                <th>Icon</th>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>İşlemler</th>
            </tr>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.Icon</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>
                        <a href="/Admin/Service/UpdateService/@item.ServiceId" class="btn btn-warning">Güncelle</a>
                        <a href="/Admin/Service/DeleteService/@item.ServiceId" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>



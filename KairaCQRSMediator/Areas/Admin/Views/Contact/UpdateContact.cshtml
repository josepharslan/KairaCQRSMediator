@model GetContactByIdQueryResult
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<div class="card-body">
    <h5 class="card-title fw-semibold mb-4">İletişim Bilgileri Güncelle</h5>
    <div class="card">
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="ContactInfoId" />
                <div class="mb-3">
                    <label class="form-label">Mail Adresi</label>
                    <input type="text" asp-for="Mail" class="form-control">
                    <span asp-validation-for="Mail" class="form-text text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Telefon Numarası</label>
                    <input type="text" asp-for="PhoneNumber" class="form-control">
                    <span asp-validation-for="PhoneNumber" class="form-text text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Güncelleme</button>
            </form>
        </div>
    </div>
</div>




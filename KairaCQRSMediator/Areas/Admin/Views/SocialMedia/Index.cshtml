@model List<GetSocialMediaQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

@{
    int count = 0;
}
<div class="card">
    <div class="card-body">
        <div class="card-title">
            <div class="row">
                <div class="col">
                    <h4>Sosyal Medya</h4>
                </div>
                <div class="col text-end">
                    <a href="/Admin/SocialMedia/CreateSocialMedia" class="btn btn-primary ">Yeni Sosyal Medya</a>
                </div>
            </div>
        </div>

        <table class="table table-bordered">

            <tr>
                <th>#</th>
                <th>İkon</th>
                <th>Link</th>
                <th>İşlemler</th>
            </tr>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.Icon</td>
                    <td>@item.Link</td>
                    <td>
                        <a href="/Admin/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-warning">Güncelle</a>
                        <a href="/Admin/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>


@model List<GetCategoryQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}
@{
    int count = 0;
}
<h3>Kategoriler</h3>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-warning">Güncelle</a>
                <a href="/Admin/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }
</table>
<a href="/Admin/Category/CreateCategory" class="btn btn-primary">Yeni Kategori</a>
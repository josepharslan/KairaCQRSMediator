@model GetCategoryByIdQueryResult
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<h3>Kategori Güncelle</h3>

<form method="post">
    <input type="hidden" asp-for="CategoryId" />

    <label>Kategori Adı</label>
    <input type="text" asp-for="CategoryName" class="form-control" />
    <br />
    <label>Kategori Görseli</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>

